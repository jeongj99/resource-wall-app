<body>
  <%- include('partials/_header') %>
    <main class="body-login-register">
      <h1>Register for <span style="font-family: 'Pacifico'">Resource!</span></h1>
      <h3>All the resources you want, at the click of a button!</h3>
      <form class="register-form" action="/register" method="POST">
        <div class="form-group mb-2">
          <div class="register-inputs">
            <label for="firstName">First Name:</label>
            <input class="form-control" type="text" id="firstName" name="firstName" required
              placeholder="Enter your first name here..." style="width: 300px; margin: 1em 0" />
          </div>
          <div class="register-inputs">
            <label for="lastName">Last Name:</label>
            <input class="form-control" type="text" id="lastName" name="lastName" required
              placeholder="Enter your last name here..." style="width: 300px; margin: 1em 0" />
          </div>
          <div class="register-inputs">
            <label for="email">Email:</label>
            <input class="form-control" type="email" id="email" name="email" required
              placeholder="Enter your email here..." style="width: 300px; margin: 1em 0" />
          </div>
          <div class="register-inputs">
            <label for="password">Password:</label>
            <input class="form-control" type="password" id="password" name="password" required
              placeholder="Enter your password here..." style="width: 300px; margin: 1em 0" />
          </div>
          <div class="register-inputs">
            <label for="handler">Handler:</label>
            <input class="form-control" type="text" id="handler" name="handler" required
              placeholder="Enter your handler here..." style="width: 300px; margin: 1em 0" />
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </main>

</body>

</html>
